{
  "daemon": true,
  "run": [
    {
      "method": "shell.run",
      "params": {
        "path": "app",
        "chain": true,
        "env": {
          "PORT": "{{port}}"
        },
        "input": null,
        "message": "npm start",
        "on": [
          {
            "event": "/http://[^\\s\\n\\r]+/",
            "done": true
          }
        ]
      }
    },
    {
      "when": "{{input && input.event && Array.isArray(input.event) && input.event.length > 0}}",
      "method": "local.set",
      "params": {
        "url": "{{input.event[0]}}"
      }
    }
  ]
}